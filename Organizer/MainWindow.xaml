<Window Title="Organize"
    x:Class="Organizer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Organizer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:Organizer.Properties"
    DataContext="{Binding Mode=OneWay, Source={StaticResource MainViewModel}}"
    Width="800" Height="450"
    UseLayoutRounding="True" WindowStartupLocation="CenterScreen" WindowState="Maximized"
    mc:Ignorable="d">
    <Window.Resources>
        <CollectionViewSource x:Key="Veriler" Source="{Binding Veriler.Veri}" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <GroupBox Header="DOSYA EKLEME">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <HeaderedContentControl Header="DOSYA SEÇ">
                        <Button Content="SEÇ" Command="{Binding DosyaEkle}" />
                    </HeaderedContentControl>
                    <TextBox Text="{Binding Etiket, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <HeaderedContentControl Header="ETİKETLER">
                        <ListBox Height="100"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        ItemsSource="{Binding Veriler.Etiketler.Etiket}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Açıklama}" IsChecked="{Binding Seçili}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </HeaderedContentControl>
                    <Button Content="ETİKET EKLE" Command="{Binding EtiketEkle}" />
                    <Button Content="KAYIT EKLE" Command="{Binding KayıtEkle}" />
                    <GroupBox Header="AYARLAR">
                        <HeaderedContentControl Header="DOSYA KAYIT YOLU">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBox Grid.Row="0" Text="{Binding Path=XmlDataPath, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Source={x:Static properties:Settings.Default}}" IsReadOnly="True" />
                                <TextBox Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding SampleXmlData, Mode=OneWay}"
                                Height="100"
                                IsReadOnly="true" TextWrapping="Wrap"
                                ToolTip="Örnek Boş XML Dosyası Data.xml adında dosya oluşturup Kaydedin." />
                                <Button Grid.Row="2" Grid.ColumnSpan="2" Content="ÖRNEK BOŞ XML DOSYASI KAYDET" Command="{Binding SaveSampleXml}" />
                                <Button Grid.Row="0" Content="KLASÖR AÇ"
                                Grid.Column="1"
                                Command="{Binding YoluKaydet, Mode=OneWay}" />
                            </Grid>
                        </HeaderedContentControl>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
        <GroupBox Grid.Column="1" Header="DOSYALAR">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBox Text="{Binding EtiketAramaMetni, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" />
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="LbDosya" d:ItemsSource="{d:SampleData ItemCount=5}"
                        IsSynchronizedWithCurrentItem="False"
                        ItemsSource="{Binding Mode=OneWay, Source={StaticResource Veriler}}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock TextWrapping="Wrap" d:Width="50" Width="200" Text="{Binding Dosya}" />
                                    <TextBlock>
                                        <Hyperlink Command="{Binding DosyaAç, Mode=OneWay, Source={StaticResource MainViewModel}}" CommandParameter="{Binding DosyaAdı}">
                                            <Run Text=" AÇ" />
                                        </Hyperlink>
                                        <Hyperlink Command="{Binding ExploreFile, Mode=OneWay, Source={StaticResource MainViewModel}}" CommandParameter="{Binding DosyaAdı}">
                                            <Run Text=" KLASÖRDE GÖSTER" />
                                        </Hyperlink>
                                    </TextBlock>

                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <ContentPresenter Content="{Binding ElementName=LbDosya, Path=SelectedItem.DosyaAdı}" Grid.Column="1" ContentTemplateSelector="{Binding Mode=OneWay, Source={StaticResource ViewerSelector}}" />
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
